@using BusinessLogic.DTOs.TagDTOs
@model BusinessLogic.DTOs.NewsArticleDTOs.GetNewsArticleDTO

@{
    ViewData["Title"] = "Details";
    var tagList = ViewData["tagList"] as List<GetTagDTO>;
    var categoryName = ViewData["categoryName"] as string;
}

<h1>Details</h1>

<div>
    <h4>NewsArticle</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            News title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NewsTitle)
        </dd>
        <dt class = "col-sm-2">
            Headline
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Headline)
        </dd>
        <dt class = "col-sm-2">
            Created Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            Modify Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifyDate)
        </dd>
        <dt class = "col-sm-2">
            News Content
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NewsContent)
        </dd>
        <dt class = "col-sm-2">
            News Source
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NewsSource)
        </dd>
        <dt>
            Category
        </dt>
        <dd>
            @Html.DisplayFor(model => categoryName)
        </dd>
        <dt>
			Tags
        </dt>
        <dd>
			@foreach (var tag in tagList)
			{
                <span class="badge badge-primary" style="color: blue;">@tag.TagName</span>
			}
        </dd>
        <dt>
            Status
        </dt>
        <dd>
			@Html.DisplayFor(model => model.NewsStatus)
        </dd>
        <dt>
            Created by
        </dt>
        <dd>
			@Html.DisplayFor(model => model.CreatedByName)
        </dd>
        <dt>
            Updated by
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UpdatedByName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.NewsArticleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
