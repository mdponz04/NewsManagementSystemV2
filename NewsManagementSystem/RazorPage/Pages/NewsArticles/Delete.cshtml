@page
@model RazorPage.Pages.NewsArticles.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>NewsArticle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            News Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.NewsTitle)
        </dd>
        <dt class="col-sm-2">
            Headline
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.Headline)
        </dd>
        <dt class="col-sm-2">
            News Content
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.NewsContent)
        </dd>
        <dt class="col-sm-2">
            News Source
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.NewsSource)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            Create By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.CreatedByName)
        </dd>
        <dt class="col-sm-2">
            Updated By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.UpdatedByName)
        </dd>
        <dt class="col-sm-2">
            Create Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            Modify Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsArticle.ModifyDate)
        </dd>
        <dt class="col-sm-2">
            News Status
        </dt>
        <dd class="col-sm-10">
            <input type="checkbox" @(Model.NewsArticle.NewsStatus ? "checked" : "") disabled />
        </dd>
        <dt class="col-sm-2">
            Tags
        </dt>
        <dd class="col-sm-10">
            @foreach (var tag in Model.Tags)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" checked disabled />
                    <label class="form-check-label">@tag.TagName</label>
                </div>
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="NewsArticle.NewsArticleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
