@page
@model RazorPage.Pages.NewsArticles.IndexModel

@{
    ViewData["Title"] = "News Articles";
}

<div class="container mt-4">
    <h1 class="mb-4">News Articles</h1>

    <form asp-action="Search" method="get" class="mb-4">
        <div class="input-group">
            <label for="searchString" class="input-group-text">Search:</label>
            <input type="text" id="searchString" name="searchString" placeholder="Enter search..." class="form-control" />
            <input type="hidden" id="pageNumber" name="pageNumber" min="1" value="1">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Create New</a>
        <a asp-action="CreatedNewsArticleHistory" class="btn btn-info">View History</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>News Title</th>
                <th>Headline</th>
                <th>News Content</th>
                <th>News Source</th>
                <th>Created Date</th>
                <th>Modified Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NewsArticles.Items)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NewsTitle)</td>
                    <td>@Html.DisplayFor(modelItem => item.Headline)</td>
                    <td>@Html.DisplayFor(modelItem => item.NewsContent)</td>
                    <td>@Html.DisplayFor(modelItem => item.NewsSource)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.ModifyDate)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.NewsArticleId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.NewsArticleId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.NewsArticleId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>