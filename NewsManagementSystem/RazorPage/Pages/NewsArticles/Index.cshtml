@page
@model RazorPage.Pages.NewsArticles.IndexModel

@{
    ViewData["Title"] = "News Articles";
}

<!-- Thư viện cần thiết -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #007bff;
        --secondary-color: #6c757d;
        --light-bg: #f4f7fa;
        --text-color: #2c3e50;
        --shadow-color: rgba(0, 0, 0, 0.1);
        --gradient-start: #007bff;
        --gradient-end: #00d4ff;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--light-bg);
        color: var(--text-color);
        line-height: 1.6;
    }

    /* Card Styling */
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 15px var(--shadow-color);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px var(--shadow-color);
    }

    /* Header Styling */
    .header {
        background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
        color: #fff;
        padding: 1.5rem;
        border-radius: 15px 15px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
        letter-spacing: 0.5px;
    }

    /* Search Container */
    .search-container {
        background: #fff;
        border-radius: 50px;
        padding: 0.5rem 1rem;
        box-shadow: 0 2px 10px var(--shadow-color);
        transition: all 0.3s ease;
    }

    .search-container:hover {
        box-shadow: 0 4px 15px var(--shadow-color);
    }

    .input-group {
        border: none;
    }

    .input-group-text {
        background: transparent;
        border: none;
        color: var(--primary-color);
    }

    .form-control {
        border: none;
        box-shadow: none;
        font-size: 1rem;
        color: var(--text-color);
    }

    .form-control:focus {
        box-shadow: none;
        color: var(--text-color);
    }

    /* Button Styling */
    .btn-modern {
        border-radius: 25px;
        padding: 0.5rem 1rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px var(--shadow-color);
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
        border: none;
        color: #fff;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #0056b3, #0096cc);
        color: #fff;
    }

    .btn-light {
        background: #fff;
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
        transition: all 0.3s ease;
    }

    .btn-light:hover {
        background: var(--primary-color);
        color: #fff;
        border-color: var(--primary-color);
    }

    .btn-sm {
        padding: 0.3rem 0.6rem;
        font-size: 0.85rem;
    }

    /* Item Card Styling */
    .item-card {
        background: #fff;
        border-radius: 12px;
        padding: 1.25rem;
        box-shadow: 0 2px 8px var(--shadow-color);
        transition: all 0.3s ease;
    }

    .item-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px var(--shadow-color);
    }

    .item-card h6 {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .item-card small {
        color: var(--secondary-color);
        font-size: 0.85rem;
        display: block;
        margin-bottom: 0.25rem;
    }

    .btn-outline-warning {
        border-color: #ffc107;
        color: #ffc107;
    }

    .btn-outline-warning:hover {
        background-color: rgba(255, 193, 7, 0.1);
        border-color: #ffc107;
    }

    .btn-outline-info {
        border-color: #17a2b8;
        color: #17a2b8;
    }

    .btn-outline-info:hover {
        background-color: rgba(23, 162, 184, 0.1);
        border-color: #17a2b8;
    }

    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
    }

    .btn-outline-danger:hover {
        background-color: rgba(220, 53, 69, 0.1);
        border-color: #dc3545;
    }

    /* Responsive Adjustments */
    media (max-width: 768px) {
        .header h1 {
            font-size: 1.5rem;
        }

        .item-card {
            padding: 1rem;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
        }
    }
</style>

<div class="container mt-5">
    <div class="card">
        <div class="header">
            <h1>News Articles</h1>
            <div>
                <a asp-action="Create" class="btn btn-light btn-modern btn-sm me-2">
                    <i class="bi bi-plus-lg"></i>
                </a>
                <a asp-action="CreatedNewsArticleHistory" class="btn btn-light btn-modern btn-sm">
                    <i class="bi bi-clock-history"></i>
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="search-container mb-4">
                <form asp-action="Search" method="get" class="d-flex align-items-center">
                    <div class="input-group flex-grow-1">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" id="searchString" name="searchString" placeholder="Search news articles..."
                               class="form-control" />
                    </div>
                    <input type="hidden" id="pageNumber" name="pageNumber" min="1" value="1">
                    <button type="submit" class="btn btn-primary btn-modern ms-3">
                        <i class="bi bi-arrow-right"></i>
                    </button>
                </form>
            </div>

            <div class="row g-4">
                @if (Model.NewsArticles?.Items != null)
                {
                    @foreach (var item in Model.NewsArticles.Items)
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="item-card">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6>@item.NewsTitle</h6>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.NewsArticleId"
                                           class="btn btn-outline-warning btn-sm btn-modern">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.NewsArticleId"
                                           class="btn btn-outline-info btn-sm btn-modern">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.NewsArticleId"
                                           class="btn btn-outline-danger btn-sm btn-modern">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </div>
                                <small>@item.NewsSource</small>
                                <small>@item.CreatedDate</small>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-4">
                        <p class="text-muted">No articles found.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>