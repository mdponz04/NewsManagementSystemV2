@page
@model RazorPage.Pages.Tags.IndexModel

@{
    ViewData["Title"] = "Tags";
}

<div class="container mt-4">
    <h1 class="mb-4">Tags</h1>

    <form asp-action="Search" method="get" class="mb-4">
        <div class="input-group">
            <label for="searchString" class="input-group-text">Search:</label>
            <input type="text" id="searchString" name="searchString" placeholder="Enter search..." class="form-control" />
            <input type="hidden" id="pageNumber" name="pageNumber" min="1" value="1">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1; // Start counting from 1
            }
            @foreach (var item in Model.Tags.Items)
            {
                <tr>
                    <td>@count</td>
                    <td>@Html.DisplayFor(modelItem => item.TagName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TagId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.TagId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.TagId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>