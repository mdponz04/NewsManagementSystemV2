@page
@model RazorPage.Pages.Tags.EditModel

<h4>Tag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UpdatedTag.TagId" value="@Model.Tag.TagId" />
            <div class="form-group">
                <label asp-for="UpdatedTag.TagName" class="control-label"></label>
                <input asp-for="UpdatedTag.TagName" class="form-control" value="@Model.Tag.TagName" />
                <span asp-validation-for="UpdatedTag.TagName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedTag.Note" class="control-label"></label>
                <input asp-for="UpdatedTag.Note" class="form-control" value="@Model.Tag.Note" />
                <span asp-validation-for="UpdatedTag.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
