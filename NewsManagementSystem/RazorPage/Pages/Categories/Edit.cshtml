@page
@model RazorPage.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = null; // This ensures the view renders without the full layout (ideal for modals)
}

<form method="post" id="editCategoryForm">
    @Html.AntiForgeryToken()
    <!-- Hidden field for the Category ID -->
    <input type="hidden" id="CategoryId" name="CategoryID" value="@Model.CategoryDto.CategoryID" />
  
    <div class="form-group">
        <label asp-for="CategoryDto.CategoryName">Name</label>
        <input asp-for="CategoryDto.CategoryName" class="form-control" id="CategoryName" />
        <span asp-validation-for="CategoryDto.CategoryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryDto.CategoryDescription">Description</label>
        <input asp-for="CategoryDto.CategoryDescription" class="form-control" id="CategoryDescription" />
        <span asp-validation-for="CategoryDto.CategoryDescription" class="text-danger"></span>
    </div>

    <!-- Additional fields (e.g., IsActive) can be added here -->

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Save Changes</button>
        <a class="btn btn-secondary" data-dismiss="modal">Cancel</a>
    </div>
</form>

<script>
    $('#editCategoryForm').submit(function (event) {
        event.preventDefault();

        // Retrieve the antiforgery token
        var token = $('input[name="__RequestVerificationToken"]').val();
        var categoryId = $('#CategoryId').val();

        // Build the data object from the form values
        var categoryData = {
            CategoryName: $('#CategoryName').val(),
            CategoryDescription: $('#CategoryDescription').val()
            // Include additional properties if necessary
        };


        $.ajax({
            url: '/Categories/Edit/' + categoryId,
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify(categoryData),
            headers: {
                'RequestVerificationToken': token,
                'X-Requested-With': 'XMLHttpRequest'
            },
            success: function (response) {
                if (response.success) {
                    // Hide the modal and reload the page (or update the UI as needed)
                    $('#editModal').modal('hide');
                    location.reload();
                } else {
                    alert("Error: " + response.error);
                }
            },
            error: function (xhr) {
                alert("Failed to update category: " + xhr.responseText);
            }
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
