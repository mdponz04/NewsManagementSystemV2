@using System.Security.Claims
@{
    var jwtToken = ViewContext.HttpContext.Session.GetString("jwt_token");
    string adminRole = "0";
    string staffRole = "1";
    string lecturerRole = "2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPage.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        :root {
            --primary-color: #1a73e8;
            --secondary-color: #5f6368;
            --light-bg: #f8fafc;
            --text-color: #202124;
            --shadow-color: rgba(0, 0, 0, 0.15);
            --gradient-start: #1a73e8;
            --gradient-end: #34c759;
            --glass-bg: rgba(255, 255, 255, 0.9);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--light-bg), #e9ecef);
            color: var(--text-color);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .navbar {
            background: transparent;
            padding: 0.75rem 1.5rem;
            transition: background 0.3s ease, box-shadow 0.3s ease;
        }

        .navbar.scrolled {
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 4px 20px var(--shadow-color);
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary-color);
            font-size: 1.5rem;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .navbar-brand:hover {
            color: var(--gradient-end);
            transform: scale(1.05);
        }

        .nav-link.dropdown-toggle {
            display: flex;
            align-items: center;
            font-weight: 600;
            color: var(--text-color) !important;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .nav-link.dropdown-toggle:hover,
        .nav-link.dropdown-toggle:focus {
            background: rgba(26, 115, 232, 0.1);
            color: var(--primary-color) !important;
            transform: translateY(-2px);
        }

        .nav-link.dropdown-toggle .bi {
            font-size: 1.5rem;
            margin-right: 0.5rem;
        }

        .dropdown-menu {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            padding: 0.75rem 0;
            animation: fadeInDropdown 0.3s ease-in-out;
            min-width: 250px;
        }

        .dropdown-item {
            font-weight: 500;
            color: var(--text-color);
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
            border-radius: 10px;
        }

        .dropdown-item:hover,
        .dropdown-item:focus {
            background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
            color: #fff !important;
            transform: translateX(5px);
        }

        .dropdown-item i {
            margin-right: 0.75rem;
            font-size: 1.2rem;
        }

        .dropdown-divider {
            border-color: rgba(0, 0, 0, 0.1);
            margin: 0.25rem 0;
        }

        .footer {
            padding: 1.5rem 0;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 -2px 10px var(--shadow-color);
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
        }

        keyframes fadeInDropdown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">RazorPage</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> Menu
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <!-- Home -->
                                <li><a class="dropdown-item" asp-area="" asp-page="/Index"><i class="bi bi-house"></i> Home</a></li>
                                <li><hr class="dropdown-divider" /></li>

                                <!-- Privacy -->
                                <li><a class="dropdown-item" asp-area="" asp-page="/Privacy"><i class="bi bi-shield-lock"></i> Privacy</a></li>
                                <li><hr class="dropdown-divider" /></li>

                                <!-- Category Management (Admin/Staff) -->
                                @if (jwtToken != null && (User.IsInRole(adminRole) || User.IsInRole(staffRole)))
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Categories/Index"><i class="bi bi-folder"></i> Category Management</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                }

                                <!-- Account Management/Profile -->
                                @if (jwtToken != null)
                                {
                                    if (User.IsInRole(adminRole))
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-page="/SystemAccounts/Index"><i class="bi bi-people"></i> Account Management</a></li>
                                    }
                                    else
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-page="/SystemAccounts/Profile"
                                               asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)"><i class="bi bi-person"></i> Profile</a></li>
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                }

                                <!-- News Articles (Public) -->
                                <li><a class="dropdown-item" asp-area="" asp-page="/NewsArticles/Index"><i class="bi bi-newspaper"></i> News Articles</a></li>
                                <li><hr class="dropdown-divider" /></li>

                                <!-- Additional Management for Staff -->
                                @if (jwtToken != null && User.IsInRole(staffRole))
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-page="/NewsArticles/Manage"><i class="bi bi-gear"></i> Manage News</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/NewsArticles/History"><i class="bi bi-clock-history"></i> News History</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Tags/Index"><i class="bi bi-tags"></i> Tag Management</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                }

                                <!-- Report Statistic (Admin) -->
                                @if (jwtToken != null && User.IsInRole(adminRole))
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-page="/ReportStatistic"><i class="bi bi-bar-chart"></i> Report Statistic</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                }

                                <!-- Login/Logout -->
                                <li>
                                    @if (jwtToken == null)
                                    {
                                        <a class="dropdown-item" asp-area="" asp-page="/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
                                    }
                                    else
                                    {
                                        <form method="post" asp-area="" asp-page="/Logout" class="dropdown-item p-0">
                                            <button type="submit" class="btn btn-link text-dark w-100 text-start p-2 m-0" style="border: none;">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    }
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <div class="container">
            © 2025 - RazorPage - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Close dropdown when clicking on any dropdown item
        document.querySelectorAll('.dropdown-item').forEach(item => {
            item.addEventListener('click', function () {
                const dropdown = document.getElementById('navbarNavDropdown');
                const bootstrapDropdown = new bootstrap.Dropdown(document.getElementById('navbarDropdown'));
                if (dropdown.classList.contains('show')) {
                    bootstrapDropdown.hide();
                }
            });
        });

        // Prevent dropdown from closing when clicking the toggle button
        document.querySelector('.dropdown-toggle').addEventListener('click', function (e) {
            e.preventDefault();
            e.stopPropagation();
            const dropdown = new bootstrap.Dropdown(this);
            dropdown.toggle();
        });

        // Add scroll effect to navbar
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
    </script>
</body>
</html>