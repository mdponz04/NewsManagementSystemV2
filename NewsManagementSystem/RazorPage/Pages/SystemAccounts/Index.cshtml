@page
@model RazorPage.Pages.SystemAccounts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-page-handler="Search" method="get" class="mb-5">
    <label for="nameSearch">Search:</label>
    <input type="text" id="searchNameString" name="searchNameString" placeholder="Enter name...">
    <input type="text" id="searchEmailString" name="searchEmailString" placeholder="Enter email...">
    <label for="searchRoleString">Role:</label>
    <select id="searchRoleString" name="searchRoleString">
        <option value="">All</option>
        <option value="Staff">Staff</option>
        <option value="Lecturer">Lecturer</option>
    </select>

    <input type="hidden" id="pageNumber" name="pageNumber" min="1" value="1">

    <button type="submit">Search</button>
</form>

<button type="button" class="btn btn-primary" onclick="loadCreateForm()">Create Account</button>

<table class="table">
    <thead>
        <tr>
            <th>FullName</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.SystemAccountsList != null)
        {
            @foreach (var item in Model.SystemAccountsList.Items)
            {
                <tr id="account-row-@item.AccountId">
                    <td class="account-name">
                        @Html.DisplayFor(modelItem => item.AccountName)
                    </td>
                    <td class="account-email">
                        @Html.DisplayFor(modelItem => item.AccountEmail)
                    </td>
                    <td class="account-role">
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        <button class="btn btn-warning" onclick="loadEditForm(@item.AccountId)">Edit</button>
                        <a class="btn btn-info" asp-page="./Profile" asp-route-id="@item.AccountId">Profile</a>
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.AccountId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    @if (Model.SystemAccountsList != null)
    {
        @if (Model.SystemAccountsList.HasPreviousPage)
        {
            <a asp-page="./Index" asp-route-pageNumber="@(Model.SystemAccountsList.PageNumber - 1)" class="btn btn-primary">Previous</a>
        }

        <span>Page @Model.SystemAccountsList.PageNumber of @Model.SystemAccountsList.TotalPages</span>

        @if (Model.SystemAccountsList.HasNextPage)
        {
            <a asp-page="./Index" asp-route-pageNumber="@(Model.SystemAccountsList.PageNumber + 1)" class="btn btn-primary">Next</a>
        }
    }
</div>

<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Account</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="createFormContainer">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Account</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="editFormContainer">
            </div>
        </div>
    </div>
</div>

<script>
    function loadCreateForm() {
        $.get('/SystemAccounts/Create')
            .done(function (data) {
                $('#createFormContainer').html(data);
                $('#createModal').modal('show');
            })
            .fail(function () {
                alert('Failed to load create form.');
            });
    }

    $(document).on("submit", "#createAccountForm", function (event) {
        event.preventDefault();
        $.post('/SystemAccounts/Create', $(this).serialize())
            .done(function () {
                $('#createModal').modal('hide');
                location.reload();
            })
            .fail(function () {
                alert('Failed to create account.');
            });
    });

    function loadEditForm(id) {
        console.log("Loading edit form for id:", id);
        $.get('/SystemAccounts/Edit/' + id) 
            .done(function (data) {
                console.log("Edit form data:", data);
                $('#editFormContainer').html(data);
                $('#editModal').modal('show');
            })
            .fail(function () {
                alert('Failed to load edit form.');
            });
    }
</script>