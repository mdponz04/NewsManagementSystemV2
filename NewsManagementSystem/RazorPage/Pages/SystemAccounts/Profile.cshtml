@page "/SystemAccounts/Profile/{id:int}"
@model RazorPage.Pages.SystemAccounts.ProfileModel
@using System.Security.Claims

@{
    ViewData["Title"] = "Account Profile";
}

<div class="container mt-4">
    <div class="card privacy-section">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Account Profile</h2>
        </div>
        <div class="card-body content">
            <h4 class="fw-bold text-muted mb-3">System Account Details</h4>
            <hr class="my-4" />
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold text-muted">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SystemAccount.AccountName)</dd>

                <dt class="col-sm-3 fw-bold text-muted">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SystemAccount.AccountEmail)</dd>

                <dt class="col-sm-3 fw-bold text-muted">Role</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SystemAccount.RoleName)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <button type="button" class="btn btn-warning fw-bold px-4" onclick="loadEditForm(@Model.SystemAccount.AccountId)">
                <i class="bi bi-pencil-square me-2"></i>Edit
            </button>
            <a asp-page="./Index" class="btn btn-secondary fw-bold px-4">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title fw-bold" id="editModalLabel">Edit Account</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editFormContainer">
                <!-- Edit form will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadEditForm(id) {
            $.get('/SystemAccounts/Edit?id=' + id, function (data) {
                $('#editFormContainer').html(data);
                $('#editModal').modal('show');
            }).fail(function () {
                alert('Failed to load the edit form. Please try again.');
            });
        }
    </script>
}