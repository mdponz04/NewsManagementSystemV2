@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<style>
    .privacy-container {
        background: #f8f9fa;
        min-height: 100vh;
        padding: 60px 0;
    }

    .privacy-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        padding: 40px;
        max-width: 800px;
        margin: 0 auto;
    }

    .privacy-header {
        border-bottom: 3px solid #007bff;
        padding-bottom: 20px;
        margin-bottom: 30px;
    }

    .privacy-section {
        margin-bottom: 30px;
        position: relative;
        padding-left: 30px;
    }

        .privacy-section::before {
            content: '';
            position: absolute;
            left: 0;
            top: 5px;
            width: 15px;
            height: 15px;
            background: #007bff;
            border-radius: 50%;
        }

    .last-updated {
        background: rgba(0, 123, 255, 0.1);
        padding: 10px 20px;
        border-radius: 20px;
        display: inline-block;
        font-size: 0.9em;
    }

    .btn-back {
        border-radius: 25px;
        padding: 10px 25px;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            transform: translateX(-5px);
        }
</style>

<div class="privacy-container">
    <div class="privacy-card">
        <div class="privacy-header">
            <h1 class="display-4 fw-bold text-primary">
                <i class="bi bi-shield-lock-fill me-2"></i>@ViewData["Title"]
            </h1>
            <p class="text-muted mt-2">Your privacy is our priority</p>
            <div class="last-updated mt-3">
                <i class="bi bi-calendar-check me-2"></i>Last Updated: March 04, 2025
            </div>
        </div>

        <div class="privacy-content">
            <div class="privacy-section">
                <h3 class="fw-bold text-dark">1. Introduction</h3>
                <p class="text-muted">
                    Welcome to our Privacy Policy. This page outlines how we collect, use, and protect your personal information when you use our services.
                </p>
            </div>

            <div class="privacy-section">
                <h3 class="fw-bold text-dark">2. Information We Collect</h3>
                <p class="text-muted">
                    We may collect personal information such as your name, email address, and usage data to improve our services and provide a personalized experience.
                </p>
            </div>

            <div class="privacy-section">
                <h3 class="fw-bold text-dark">3. How We Use Your Information</h3>
                <p class="text-muted">
                    Your information is used to enhance our services, communicate with you, and ensure the security of our platform.
                </p>
            </div>

            <div class="privacy-section">
                <h3 class="fw-bold text-dark">4. Your Rights</h3>
                <p class="text-muted">
                    You have the right to access, modify, or delete your personal data at any time. Contact us for assistance.
                </p>
            </div>
        </div>

        <div class="mt-5 text-center">
            <a href="/" class="btn btn-outline-primary btn-back">
                <i class="bi bi-arrow-left me-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}